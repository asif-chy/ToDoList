<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>ToDoList</title>
    <link rel="stylesheet" href="css/styles.css">
  </head>
  <body>
  <div class="box" id="heading">
    <h1><%= listTitle%></h1>
  </div>
  <div class="box">
    <%itemList.forEach(function(item){%>

      <form class="" action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name="deleteItem" value = "<%=item._id%>" onChange="this.form.submit()">
        <input type="hidden" name="hiddenValue" value = "<%=listTitle%>" onChange="this.form.submit()">
        <p><%=item.item%></p>
      </div>
      </form>

    <%})%>
    <form class="item" action="/" method="post">
      <input type="text" name="newInput" placeholder="New Item" autocomplete="off">
      <button type="submit" name="list" value="<%=listTitle%>">+</button>
    </form>
  </div>

  </body>
</html>
